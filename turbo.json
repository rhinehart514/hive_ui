{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "flutter:build": {
      "dependsOn": [
        "@hive/tokens#build"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "flutter:test": {
      "outputs": [
        "coverage/**"
      ]
    },
    "tokens:build": {
      "outputs": [
        "dist/**"
      ]
    }
  }
} 